{
    "type": "APL",
    "version": "1.1",
    "settings": {},
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.1.0"
        }
    ],
    "resources": [],
    "styles": {
        "questionText": {
            "values": [
                {
                    "fontSize": "@fontSizeXSmall",
                    "color": "@colorBlue800",
                    "textAlign": "left",
                    "paddingLeft": "@spacingMedium"
                }
            ]
        },
        "responseAndSolution": {
            "values": [
                {
                    "fontSize": "@fontSizeXSmall",
                    "color": "@colorBlue800",
                    "textAlign": "right"
                }
            ]
        }
    },
    "onMount": [],
    "graphics": {},
    "commands": {},
    "layouts": {
        "problemList": {
            "description": "Problem to solve, response & solution",
            "parameters": [
            ],
            "items": [
                {
                    "type": "Sequence",
                    "id": "textList",
                    "numbered": false,
                    "height": "100vh",
                    "width": "100vw",
                    "data": "${sequenceEventPropertiesData.listItems}",
                    "item": [
                        {
                            "type": "Container",
                            "direction": "row",
                            "inheritParentState": true,
                            "paddingLeft": "@spacingMedium",
                            "paddingTop": "@spacingXSmall",
                            "items": [
                                {
                                    "text": "${data.question}",
                                    "type": "Text",
                                    "style": "questionText",
                                    "id": "question",
                                    "width":"${@viewportProfile == @hubRoundSmall ? 55vw : 70vw}"
                                },
                                {
                                    "text": "${data.response}",
                                    "type": "Text",
                                    "style": "responseAndSolution",
                                    "id": "answer",
                                    "width": "10vw"
                                },
                                {
                                    "text": "${data.solution}",
                                    "type": "Text",
                                    "style": "responseAndSolution",
                                    "id": "solution",
                                    "width": "10vw"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}
