{
    "type": "APL",
    "version": "1.1",
    "settings": {},
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.1.0"
        }
    ],
    "resources": [],
    "styles": {
        "questionText": {
            "values": [
                {
                    "fontSize": "${@viewportProfile == @hubRoundSmall ? @fontSize2XSmall : @fontSizeMedium}",
                    "color": "@colorWhiteTVSafe",
                    "textAlign": "left",
                    "paddingLeft": "@spacingXSmall",
                    "paddingRight": "@spacingXSmall",
                    "textAlignVertical": "center"
                }
            ]
        },
        "responseAndSolution": {
            "values": [
                {
                    "fontSize": "@fontSizeXSmall",
                    "color": "@colorWhite",
                    "textAlign": "right",
                    "textAlignVertical": "center"
                }
            ]
        }
    },
    "onMount": [],
    "graphics": {},
    "commands": {},
    "layouts": {
        "problemList": {
            "description": "Problem to solve, response & solution",
            "parameters": [],
            "items": [
                {
                    "type": "Sequence",
                    "id": "textList",
                    "numbered": false,
                    "height": "${@viewportProfile == @hubRoundSmall ? 40vh : 60vh}",
                    "width": "90vw",
                    "data": "${sequenceEventPropertiesData.listItems}",
                    "item": [
                        {
                            "type": "Container",
                            "id": "containerProblemList",
                            "direction": "row",
                            "inheritParentState": true,
                            "paddingLeft": "@spacingLarge",
                            "paddingTop": "@spacing3XSmall",
                            "items": [
                                {
                                    "background": {
                                        "type": "linear",
                                        "colorRange": [
                                            "black",
                                            "green"
                                        ]
                                    },
                                    "items": [
                                        {
                                            "text": "${data.question}",
                                            "type": "Text",
                                            "style": "questionText",
                                            "id": "question",
                                            "width": "${@viewportProfile == @hubRoundSmall ? 55vw : 70vw}"
                                        }
                                    ],
                                    "borderRadius": "20",
                                    "type": "Frame"
                                },
                                {
                                    "text": "${data.response.value}",
                                    "textAlign": "right",
                                    "type": "Text",
                                    "style": "responseAndSolution",
                                    "id": "answer",
                                    "width": "10vw",
                                    "color": "${data.response.color}"
                                },
                                {
                                    "text": "${data.solution.value}",
                                    "textAlign": "right",
                                    "type": "Text",
                                    "style": "responseAndSolution",
                                    "id": "solution",
                                    "width": "10vw",
                                    "color": "${data.solution.color}"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}
